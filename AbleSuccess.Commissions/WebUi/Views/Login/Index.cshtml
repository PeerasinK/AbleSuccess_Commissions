@model AbleSuccess.Commissions.WebUi.Models.LoginModel

@{
    ViewBag.Title = "AbleSuccess - Commission System";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="container" style="margin-top:50px; ">
        @using (Html.BeginForm("Authentication", "Login", FormMethod.Post, new { id = "LoginForm" }))
        {
            <div class="col-md-offset-4 col-md-4 well">
                <div class="col-sm-12 text-center">
                    @*<span style="color:gray; font-size:x-large; font-weight:bold;">Welcome to</span>*@
                    <span style="color:orange; font-size:30px; font-weight:bold;">Commission System</span>
                    <hr />
                </div>
                <div class="col-sm-12 text-center">
                    <img src='@Url.Content("../../Contents/Images/Logo-Able.png")' width="200" alt="Able Success">
                </div>
                <div class="col-sm-12" style="margin:5px 0px 0px 0px">
                    @*<strong style="color:gray; margin:0px 0px 0px 20px;">Username: </strong>*@ <br>
                    <div class="col-sm-12">
                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @placeholder = "Username" })
                    </div>
                    @*<strong style="color:gray; margin:0px 0px 0px 20px;">Password: </strong>*@ <br>
                    <div class="col-sm-12">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Password" })
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                </div>
                <div class="col-xs-12 text-center" style="margin-top:30px">
                    <div class="col-sm-12">
                        <input type="submit" value="Login" class="btn btn-primary" style="width:90%"  />
                    </div>
                    <div class="col-xs-12 text-center alert-danger" style="margin-top:10px">
                        @Model.ResultMessage
                    </div>
                </div>
		<div class="col-xs-12 text-center" style="margin-top:10px">
                    <div class="col-xs-12 text-center id="download" alert-danger" style="color:gray;margin-top:0px;cursor:pointer" onclick="DownloadManual()">
                        Download User Manual
                    </div>
                </div>
            </div>
        }

    </div>
</body>
</html>
<script>
function DownloadManual() {
location.href = "http://192.168.1.13:9000/_Doc/UserManual.docx";
};
</script>